<div class="row">

    <div class="col-lg-6">
        <form asp-action="Login" asp-controller="Account" method="post">
            <h1>Login Form</h1><span style="margin-left: 20px; color:red;">@TempData["message"]</span>

            <div class="form-group">
                <input name="userId" class="form-control" placeholder="Username" required="" type="text" />
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Password" required="" />
            </div>
            <div>
                <button type="submit" class="btn btn-block btn-default submit" href="index.html">Log in</button>
            </div>




        </form>


    </div>
    
</div>