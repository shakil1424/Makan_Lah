@{
}

<div class="text-info">
    <h3>Edit Restaurant </h3>
</div>


<div class="row">
    <div class="col-md-3 col-sm-12 col-xs-12">
        <form asp-action="EditRestaurant" asp-controller="Restaurant" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>

            <input type="hidden" name="restaurantId" value="@ViewBag.restaurantId" />


            <div class="form-group">
                <label>Enter New Restaurant Title</label>
                <input type="text" name="restaurantTitle" class="form-control" required />

            </div>

            

            <div class="form-group">
                <label>Upload Image</label>
                <input type="file" name="file" class="form-control" required />

            </div>



            <div class="text-right">
                <button type="submit" name="editRestaurant" class="btn btn-default">EDIT</button>
            </div>


        </form>


    </div>

</div>